resource "google_dns_managed_zone" "shifter-zone" {
  project     = module.project.project_id
  name        = "shifter-zone"
  dns_name    = "shifter.bowers1.com."
  description = "Shifter Zone"
}

resource "google_dns_record_set" "shifter-zone-deleg" {
  project = "b1-services-230040"
  name    = google_dns_managed_zone.shifter-zone.dns_name
  type    = "NS"
  ttl     = 60

  managed_zone = "bowers1-zone"

  rrdatas = google_dns_managed_zone.shifter-zone.name_servers
}

resource "google_dns_record_set" "os-master-dns-rsa" {
  project = var.project_id
  name    = "console.${google_dns_managed_zone.shifter-zone.dns_name}"
  type    = "A"
  ttl     = 300

  managed_zone = google_dns_managed_zone.shifter-zone.name

  rrdatas = [google_compute_address.os-master-addr.address]
}
